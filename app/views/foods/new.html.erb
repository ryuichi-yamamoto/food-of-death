<body class="mojitachi">
  <div clas="moji">
    <div class="moji__tsu"></div>
    <div class="moji__ku"></div>
    <div class="moji__kotsu"></div>
    <div class="moji__te"></div>
    <div class="moji__mi"></div>
    <div class="moji__yo"></div>
