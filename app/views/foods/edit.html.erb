<body class="emojitachi">
  <div clas="moji">
    <div class="moji__tsu"></div>
    <div class="moji__ku"></div>
    <div class="moji__ri"></div>
    <div class="moji__na"></div>
    <div class="moji__o"></div>
    <div class="moji__so"></div>
    <div class="moji__u"></div>
  </div>

  <div class="ctt_title">
  </div>

  <%= form_with model: @food, class: :eform, local: true do |form| %>
    <div class="eform__name-icon"></div>
    <%= form.text_field :name, placeholder: :なんてもの, class: :eform__name %>
    <div class="eform__unit-icon"></div>
    <%= form.text_field :unit, placeholder: :単位, class: :eform__unit %>
    <div class="eform__death-icon"></div>
    <%= form.number_field :death, placeholder: :致死量, class: :eform__death %>
    <div class="eform__description-icon"></div>
    <%= form.text_area :description, placeholder: :説明, class: :eform__description %>
    <div class="eform__btn-icon"></div>
    <%= form.submit '完成！', class: :eform__btn %>
  <% end %>
  <div class="sougen">
    <footer class="sougen__ber"></footer>
  </div>
</body>